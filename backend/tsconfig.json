{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@intelligence/*": ["src/intelligence/*"],
      "@memory/*": ["src/memory/*"],
      "@flows/*": ["src/flows/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@schemas/*": ["src/schemas/*"],
      "@models/*": ["src/database/models/*"], // ← CORREGIDO AQUÍ
      "@types/*": ["src/types/*"],
      "@data/*": ["src/data/*"],
      "@handlers/*": ["src/handlers/*"],
      "@ocr/*": ["src/ocr/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "main.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
